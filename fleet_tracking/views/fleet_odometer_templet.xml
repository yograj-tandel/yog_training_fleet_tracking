<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="index">
			<t t-call="website.layout">
                <t t-set="title">Driver</t>
                <div class="oe_structure"/>
                <div class="oe_structure">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Driving Licence Nunmber</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                    	<t t-foreach="driver" t-as="d">
                        	<tr>
                                <td><t t-esc="d.name"/></td>
                                <td><t t-esc="d.phone"/></td>
                                <td><t t-esc="d.driving_licence_nunmber"/></td>
                                <td><a t-attf-href="/update/#{slug(d)}/"><i class="fa fa-edit"/></a></td>
                               
                                <td><a t-attf-href="/delete/#{slug(d)}/"><i class="fa fa-trash"/></a></td>
                            </tr>
                    	</t>
                    </table>
                </div>
            </t>
        </template>

        <template id="create_update_form">
            <t t-call="website.layout">
                <t t-set="title">Driver</t>
                <div class="oe_structure"/>
                <div class="oe_structure">
<!--                                         <table class="table table-sm">
    
                            <tr>
                                <td><t t-esc="driver_id.name"/></td>
                                <td><t t-esc="driver_id.phone"/></td>
                                <td><t t-esc="driver_id.driving_licence_nunmber"/></td>
                            </tr>
                      
                    </table> -->

                <form class="oe_signup_form" role="form" method="post" >
                    <input type="text" name="name" t-att-value="driver_id.name"/>
                    <input type="text" name="phone" t-att-value="driver_id.phone"/>
                    <!-- <div class="text-center oe_login_buttons pt-3">
                        <button type="submit" class="btn btn-primary btn-block"> Sign up</button>
                        <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link btn-sm" role="button">Already have an account?</a>
                        <div class="o_login_auth"/>
                    </div> -->
                </form>
                </div>
            </t>
        </template>
    </data>
</odoo>

