<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <data>
    <record model='ir.ui.view' id = 'fleet_vehicle_service_list_view'>
      <field name= "name">fleet.vehicle.service.tree</field>
      <field name="model">fleet.vehicle.service</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="date"/>
          <field name="cost"/>
          <field name="vehicle"/>
          <field name="note"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="fleet_vehicle_service_form_view">
      <field name="name">fleet.vehicle.service.form</field>
      <field name="model">fleet.vehicle.service</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="date"/>
              <field name="cost"/>
              <field name="vehicle"/>
              <field name="note"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id = "fleet_vehicle_service_action_window">
      <field name="name"> Service </field>
      <field name="res_model">fleet.vehicle.service</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Service" id="fleet_vehicle_service_menu_child" parent="vehicle_brand_menu_root" action="fleet_vehicle_service_action_window"/>


  </data>
</odoo>