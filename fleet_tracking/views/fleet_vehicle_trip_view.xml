          <field name="name"/>
          <field name="email"/>
          <field name="mobile"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="fleet_customer_form_view">
      <field name="name">fleet.customer.form</field>
      <field name="model">fleet.customer</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="email"/>
              <field name="mobile"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


