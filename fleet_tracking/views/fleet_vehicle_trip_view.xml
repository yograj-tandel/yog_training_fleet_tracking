    <record model="ir.ui.view" id="fleet_vehicle_trip_booking_list_view">
      <field name="name">fleet.vehicle.trip.booking.tree</field>
      <field name="model">fleet.vehicle.trip.booking</field>
      <field name="arch" type="xml">
        <tree string="contract list" decoration-info="state=='draft'" decoration-danger="state=='confirm'" decoration-success="state=='done'">
          <field name="customer"/>
          <field name="state"/>          
          <field name="start_date"/>
          <field name="end_date"/>
          <field name="duration"/>
          <field name="no_of_person_on_trip"/>
          <field name="vehicle_id"/>
          <field name="driver_id"/>
          <field name="pickup_address"/>
          <field name="destination_discription"/>
          <field name="instruction"/>
        </tree>
      </field>
    </record>

    <record model = "ir.ui.view" id = "fleet_vehicle_trip_booking_form_view">
      <field name="name">fleet.vehicle.trip.booking.form</field>
      <field name="model">fleet.vehicle.trip.booking</field>
      <field name="arch" type="xml">
        <form>
          <header>
<!--             <field name="custom_state" widget="statusbar" status_visible="draft,confirm,done"/>
            <button string = "Confirm" type="object" name="action_confirm" attrs="{'invisible': [('custom_state', '=', 'draft' )]}" class = "oe_highlight"/> -->
            <button string = "Confirm" type="object" name="action_confirm" states="draft" class = "oe_highlight" />
            <button string = "Draft" type="object" name="action_draft" states="confirm,done" class = "oe_highlight" />
            <button string = "Done" type="object" name="action_done" states="draft,confirm" class = "oe_highlight" />
            <field name="state" widget="statusbar" status_visible="draft,confirm,done"/>
          </header>

          <sheet>
            <group>
              <field name="customer"/>        
              <field name="start_date"/>
              <field name="end_date"/>
              <field name="duration"/>
              <field name="no_of_person_on_trip"/>
              <field name="vehicle_id"/>
              <field name="driver_id"/>
              <field name="pickup_address"/>
              <field name="destination_discription"/>
              <field name="instruction"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <record model = "ir.ui.view" id = "fleet_vehicle_trip_booking_calendar_view">
      <field name="name">fleet.vehicle.trip.booking.calendar</field>
      <field name="model">fleet.vehicle.trip.booking</field>
      <field name="arch" type="xml">
        <calendar string="Contract's" date_start="start_date" date_stop="end_date" color="customer">
            <field name="customer"/>
        </calendar>
      </field>
    </record>


    <record model="ir.ui.view" id="fleet_vehicle_trip_booking_search_view">
      <field name="name">fleet.vehicle.trip.booking.search</field>
      <field name="model">fleet.vehicle.trip.booking</field>
      <field name="arch" type="xml">
          <search>
              <field name="customer"/>
              <field name="start_date"/>
              <field name="duration" string="Contract Type"
               filter_domain="[('duration', 'ilike', self)]"/>
<!-- 
              <group string="Group By">
                  <filter name="group_by_vehicle" string="Vehicle"
                          context="{'group_by': 'vehicle'}"/>
              </group> -->
          </search>
      </field>
    </record>



