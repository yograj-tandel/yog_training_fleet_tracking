<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <data>
    <record model='ir.ui.view' id = 'fleet_cost_list_view'>
      <field name= "name">fleet.cost.tree</field>
      <field name="model">fleet.cost</field>
      <field name="arch" type="xml">
        <tree>
          <field name="vehicle"/>
          <field name="date"/>
          <field name="maintenance_type"/>
          <field name="cost"/>
          <field name="note"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="fleet_cost_form_view">
      <field name="name">fleet.cost.form</field>
      <field name="model">fleet.cost</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="vehicle"/>
              <field name="date"/>
              <field name="maintenance_type"/>
              <field name="cost"/>
              <field name="note"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>



    <record id=">fleet_cost_graph_view" model="ir.ui.view">
       <field name="name">fleet.cost.graph</field>
       <field name="model">fleet.cost</field>
       <field name="arch" type="xml">
           <graph string="Graph">
               <field name="vehicle"/>
               <field name="cost" type="measure"/>
           </graph>
       </field>
    </record>

    <record model="ir.actions.act_window" id = "fleet_cost_action_window">
      <field name="name"> Services </field>
      <field name="res_model">fleet.cost</field>
      <field name="view_mode">tree,form,graph</field>
    </record>

    <menuitem name="Services" id="fleet_cost_menu_child" parent="fleet_tracking.vehicle_vehicle_menu_child" action="fleet_cost_action_window"/>


  </data>
</odoo>