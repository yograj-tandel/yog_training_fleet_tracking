<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <data>



    <record model='ir.ui.view' id = 'fleet_driver_list_view'>
      <field name= "name">fleet.driver.tree</field>
      <field name="model">fleet.driver</field>
      <field name="arch" type="xml">
        <tree>
          <field name="image"/>
          <field name="name"/>
          <field name="driving_licence_nunmber"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="address"/>
          <field name="birth_date"/>
        </tree>
      </field>
    </record>

    <record model='ir.ui.view' id = 'fleet_driver_form_view'>
      <field name= "name">fleet.driver.form</field>
      <field name="model">fleet.driver</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <field name="image" widget="image" class="oe_avatar"/>
            <div class="oe_title">
              <label for="name" class="oe_edit_only"/>              
              <h2><field name="name"/></h2>
            </div>
            <group>     
                <field name="driving_licence_nunmber"/>              
                <field name="phone"/>
                <field name="email"/>
                <field name="address"/>
                <field name="birth_date"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_view_contract" model="ir.actions.act_window">
               <field name="name">Contract</field>
               <field name="type">ir.actions.act_window</field>
               <field name="res_model">fleet.driver</field>
               <field name="view_mode">tree</field>
               <field name="context">{'record_id' : active_id}</field>
               <field name="target">new</field>
        </record>

    <record model="ir.ui.view" id="fleet_driver_kanban">
        <field name="name">fleet.driver.kanban</field>
        <field name="model">fleet.driver</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
              <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong>
                                    <field name="name"/>                                    
                                </strong>
                            </div>
                            <div>
                                <field name="driving_licence_nunmber"/>
                            </div>
                            <div>
                                <field name="address"/>
                            </div>
                            <div>
                                <field name="birth_date"/>
                            </div>
                            <div>
                                <field name="email"/>
                                <span class="float-right">Mobile : <field name="phone"/></span>
                            </div>
                            <div>
                              <a type="action" name="%(action_view_contract)d">Contract</a>
                            </div>
                            
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record model="ir.actions.act_window" id = "fleet_driver_action_window">
      <field name="name"> Driver </field>
      <field name="res_model">fleet.driver</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>


        <record model='ir.ui.view' id = 'vehicle_vehicle_list_view'>
      <field name= "name">fleet.vehicle.vehicle.tree</field>
      <field name="model">fleet.vehicle</field>
      <field name="arch" type="xml">
        <tree>
              <field name="model"/>
              <field name="license_plate"/>
              <field name="driver"/>
              <field name="no_of_seats"/>
              <field name="no_of_doors"/>
              <field name="color"/>
              <field name="model_year"/>
              <field name="description"/>
        </tree>
      </field>
    </record>

    <record model='ir.ui.view' id = 'vehicle_vehicle_form_view'>
      <field name= "name">fleet.vehicle.form</field>
      <field name="model">fleet.vehicle</field>
      <field name="arch" type="xml">

        <form>
          <sheet>
            <group>
              <field name="model"/>
              <field name="license_plate"/>
              <field name="driver"/>
              <field name="no_of_seats"/>
              <field name="no_of_doors"/>
              <field name="color"/>
              <field name="model_year"/>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id = "vehicle_vehicle_action_window">
      <field name="name"> vehicle </field>
      <field name="res_model">fleet.vehicle</field>
      <field name="view_mode">tree,form</field>
    </record>



    <menuitem name="Vehicle" id="vehicle_vehicle_menu_child" parent="vehicle_brand_menu_root" action="vehicle_vehicle_action_window"/>

    <menuitem name="Driver" id="fleet_driver_menu_child" parent="vehicle_brand_menu_root" action="fleet_driver_action_window"/>


  </data>
</odoo>