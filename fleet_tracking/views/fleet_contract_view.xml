<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <data>

    <record model='ir.ui.view' id = 'fleet_customer_list_view'>
      <field name= "name">fleet.customer.tree</field>
      <field name="model">fleet.customer</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="email"/>
          <field name="mobile"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="fleet_customer_form_view">
      <field name="name">fleet.customer.form</field>
      <field name="model">fleet.customer</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="email"/>
              <field name="mobile"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <record model="ir.ui.view" id="contract_type_list_view">
      <field name="name">contract.type.tree</field>
      <field name="model">contract.type</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model = "ir.ui.view" id = "contract_type_form_view">
      <field name="name">contract.type.form</field>
      <field name="model">contract.type</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>




    <record model="ir.ui.view" id="fleet_vehicle_contract_list_view">
      <field name="name">fleet.vehicle.contract.tree</field>
      <field name="model">fleet.vehicle.contract</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="contract_type"/>
          <field name="start_date"/>
          <field name="end_date"/>
          <field name="vehicle"/>
          <field name="instruction"/>
        </tree>
      </field>
    </record>

    <record model = "ir.ui.view" id = "fleet_vehicle_contract_form_view">
      <field name="name">fleet.vehicle.contract.form</field>
      <field name="model">fleet.vehicle.contract</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="contract_type"/>
              <field name="start_date"/>
              <field name="end_date"/>
              <field name="vehicle"/>
              <field name="instruction"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id = "fleet_vehicle_contract_action_window">
      <field name="name"> Contract </field>
      <field name="res_model">fleet.vehicle.contract</field>
      <field name="view_mode">tree,form</field>
    </record> 

    <menuitem name="Contract" id="fleet_vehicle_contract_menu_child" parent="vehicle_brand_menu_root" action="fleet_vehicle_contract_action_window"/>

  </data>
</odoo>