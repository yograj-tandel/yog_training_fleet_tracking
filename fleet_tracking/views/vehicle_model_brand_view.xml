<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model='ir.ui.view' id = 'vehicle_car_model_list_view'>
      <field name= "name">vehicle.car.model.tree</field>
      <field name="model">vehicle.car.model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="brand_name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="vehicle_car_model_form_view">
      <field name="name">vehicle.car.model.form</field>
      <field name="model">vehicle.car.model</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="brand_name"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    
    <record model="ir.ui.view" id="vehicle_brand_list_view">
      <field name="name">vehicle.brand.tree</field>
      <field name="model">vehicle.brand</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model = "ir.ui.view" id = "vehicle_brand_form_view">
      <field name="name">vehicle.brand.form</field>
      <field name="model">vehicle.brand</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>



    <record model='ir.ui.view' id = 'vehicle_vehicle_list_view'>
      <field name= "name">vehicle.vehicle.tree</field>
      <field name="model">vehicle.vehicle</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="license_plate"/>
        </tree>
      </field>
    </record>

    <record model='ir.ui.view' id = 'vehicle_vehicle_form_view'>
      <field name= "name">vehicle.vehicle.form</field>
      <field name="model">vehicle.vehicle</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="license_plate"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>



    <record model="ir.actions.act_window" id = "vehicle_brand_action_window">
      <field name="name"> Brand Name </field>
      <field name="res_model">vehicle.brand</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id = "vehicle_model_action_window">
      <field name="name"> model Name </field>
      <field name="res_model">vehicle.car.model</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id = "vehicle_vehicle_action_window">
      <field name="name"> vehicle </field>
      <field name="res_model">vehicle.vehicle</field>
      <field name="view_mode">tree,form</field>
    </record>


    <menuitem name="Vehicle Brand" id="vehicle_brand_menu_root"/>

    <menuitem name="Manufacturers" id="vehicle_brand_menu_child" parent="vehicle_brand_menu_root" action="vehicle_brand_action_window"/>

    <menuitem name="Models" id="vehicle_model_menu_child" parent="vehicle_brand_menu_root" action="vehicle_model_action_window"/>

    <menuitem name="Vehicle" id="vehicle_vehicle_menu_child" parent="vehicle_brand_menu_root" action="vehicle_vehicle_action_window"/>

  </data>
</odoo>