<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <report
    id="trip_report"
    model="fleet.vehicle.trip.booking"
    string="Trip Report"
    name="fleet_tracking.trip_report_template"
    file="fleet_tracking.trip_report"
    report_type="qweb-pdf"
    />

    <template id="trip_report_template">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                  <table>
                    <tr>
                      <td> <b>Name : </b> </td><td><span t-field="o.customer"/></td>
                    </tr>
                    <tr>
                      <td> <b>Start Date : </b> </td><td><span t-field="o.customer"/></td>
                    </tr>
                    <tr>
                      <td> <b>End Date : </b> </td><td><span t-field="o.start_date"/></td>
                    </tr>
                    <tr>
                      <td> <b>Duration : </b> </td><td><span t-field="o.end_date"/></td>
                    </tr>
                    <tr>
                      <td> <b>No of Traveller : </b> </td><td><span t-field="o.no_of_person_on_trip"/></td>
                    </tr>
                    <tr>
                      <td> <b>Pickup Address : </b> </td><td><span t-field="o.pickup_address"/></td>
                    </tr>
                    <tr>
                      <td> <b>Destination : </b> </td><td><span t-field="o.destination_discription"/></td>
                    </tr>
                    <tr>
                      <td> <b>Instruction : </b> </td><td><span t-field="o.instruction"/></td>
                    </tr>
                    <tr>
                      <td> <b>Driver : </b> </td><td><span t-field="o.driver_id"/></td>
                    </tr>
                    <tr>
                      <td> <b>Vehicle : </b> </td><td><span t-field="o.vehicle_id"/></td>
                    </tr>
                  </table>
                </div>
            </t>
        </t>
    </t>
    </template>
</odoo>