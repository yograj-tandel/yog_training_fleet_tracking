<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <report
    id="trip_report"
    model="fleet.vehicle.trip.booking"
    string="Trip Report"
    name="fleet_tracking.trip_report_template"
    file="fleet_tracking.trip_report"
    report_type="qweb-pdf"
    />

    <template id="trip_report_template">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                  <table>
                    <tr>
                      <td><h1><b>Name : </b></h1></td><td><span t-field="o.customer"/></td>
                    </tr>
                    <tr>
                      <td><h1><b>Start Date : </b></h1></td><td><span t-field="o.customer"/></td>
                    </tr>
                    <tr>
                      <td><h1><b>End Date : </b></h1></td><td><span t-field="o.start_date"/></td>
                    </tr>
                    <tr>
                      <td><h1><b>Duration : </b></h1></td><td><span t-field="o.end_date"/></td>
                    </tr>
                    <tr>
                      <td><h1><b>No of Traveller : </b></h1></td><td><span t-field="o.no_of_person_on_trip"/></td>
                    </tr>
                    <tr>
                      <td><h1><b>Pickup Address : </b></h1></td><td><span t-field="o.pickup_address"/></td>
                    </tr>
                    <tr>
                      <td><h1><b>Destination : </b></h1></td><td><span t-field="o.destination_discription"/></td>
                    </tr>
                    <tr>
                      <td><h1><b>Instruction : </b></h1></td><td><span t-field="o.instruction"/></td>
                    </tr>
                    <tr>
                      <td><h1><b>Driver : </b></h1></td><td><span t-field="o.driver_id"/></td>
                    </tr>
                    <tr>
                      <td><h1><b>Vehicle : </b></h1></td><td><span t-field="o.vehicle_id"/></td>
                    </tr>
                  </table>
