<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.module.category" id="module_fleet_security">
  	    <field name="name">Fleet Security</field>
  		<field name="description">User access for fleet tracking</field>
  		<field name="sequence">4</field>
	</record>
    <record id="group_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="fleet_tracking.module_fleet_security"/>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('base.group_erp_manager'))]"/>
        <field name="category_id" ref="fleet_tracking.module_fleet_security"/>
    </record>

    <record id="contract_states_access" model="ir.rule">
        <field name="name">Only confirmed sessions can be seen by user</field>
        <field name="model_id" ref="model_fleet_vehicle_contract_booking"/>
        <field name="groups" eval="[(4, ref('fleet_tracking.group_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="domain_force">[('state', '=','confirm')]</field>
    </record>
</odoo>